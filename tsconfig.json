{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": [
      "src"
    ],
    "forceConsistentCasingInFileNames": true,
    //"noImplicitReturns": true,
    //"noImplicitThis": true,
    //"noImplicitAny": true,
    "strictNullChecks": true,
    //"noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
